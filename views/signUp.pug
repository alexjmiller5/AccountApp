title Very Secure Login
head
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0' crossorigin='anonymous')
  link(href='styles/styles.css' rel='stylesheet')
  script(defer='' src='signUp.js')
form#signUpForm(action='/createAccount' method='POST')
  .form-group.d-flex.flex-column.justify-content-center.align-items-center.w-100.h-100
    .form-group(style='width: 360px;')
      label.mx-2(for='first') First Name
      input#first.form-control.form-control-lg.m-2(name='first' type='text' placeholder='First Name')
    .form-group(style='width: 360px;')
      label.mx-2(for='last') Last Name
      input#last.form-control.form-control-lg.m-2(name='last' type='text' placeholder='Last Name')
    .form-group(style='width: 360px;')
      label.mx-2(for='uname') Username
      input#uname.form-control.form-control-lg.m-2(name='uname' type='text' placeholder='Username')
      .form-group(style='width: 360px;')
      .d-flex.flex-row.justify-content-center(style='width: 380px;')
        small.form-text.text-danger= unameMessage
      label.mx-2(for='pword') Password
      input#pword.form-control.form-control-lg.m-2(name='pword' type='password' placeholder='Password')
    .form-group(style='width: 360px;')
      label.mx-2(for='pwordConfirm') Confirm Password
      input#pwordConfirm.form-control.form-control-lg.mt-2.mx-2(name='pwordConfirm' type='password' placeholder='Confirm Password')
      .d-flex.flex-row.justify-content-center(style='width: 380px;')
        small.form-text.text-danger.mt-2= pwordMessage
      .d-flex.flex-row.justify-content-center(style='width: 380px;')
        small.form-text.text-muted Already have an account? 
          a(href='/') Sign in
    .form-group
      input#signUpButton.btn.btn-primary.btn-lg.m-3(value='Create Account' type='submit')
